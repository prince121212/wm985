# pnpm 配置文件
# 解决 Windows 系统上的符号链接问题

package-manager=pnpm

# 使用提升的 node_modules 结构，类似于 npm
node-linker=hoisted

# 禁用符号链接以避免 Windows 上的问题
symlinks=false

# 禁用符号链接可执行文件
prefer-symlinked-executables=false

# 启用严格的对等依赖
strict-peer-dependencies=false

# 自动安装对等依赖
auto-install-peers=true

# 禁用更新检查以提高性能
update-notifier=false
